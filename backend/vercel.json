{
  "version": 2,
  "builds": [
    { "src": "*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/auth/(.*)", "dest": "./routes/auth.router.js" },
    { "src": "/user/(.*)", "dest": "./routes/user.router.js" },
    { "src": "/chatbot/(.*)", "dest": "./routes/chatbot.router.js" },
    { "src": "/product/(.*)", "dest": "./routes/product.route.js" },
    { "src": "/(.*)", "dest": "./app.js" }
  ]
}
